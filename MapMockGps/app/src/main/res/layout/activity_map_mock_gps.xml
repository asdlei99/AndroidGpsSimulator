<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">
    <LinearLayout
        android:padding="0dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:padding="0dp"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/servers"/>
        <Button
            android:padding="0dp"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:onClick="delServer"
            android:id="@+id/del_server"
            android:layout_weight="1"
            android:text="del"/>
    </LinearLayout>
    <LinearLayout
        android:padding="0dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    	<EditText
            android:padding="0dp"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
    	    android:id="@+id/new_server"/>
        <Button
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addServer"
            android:id="@+id/add_server"
            android:layout_weight="1"
            android:text="add"/>
    </LinearLayout>
    <LinearLayout
        android:padding="0dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="resetPosition"
            android:id="@+id/reset_position"
            android:layout_weight="1"
            android:text="reset position"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/mainlayout"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
        <RelativeLayout
            android:id="@+id/mymaplayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <com.sdesimeur.android.mapmockgps.CrossView
            android:id="@+id/crossview"
            android:layout_width="@dimen/crossSize"
            android:layout_height="@dimen/crossSize"
            android:layout_gravity="center"
            android:src="@drawable/cross"
            />
    
    </FrameLayout>
</LinearLayout>
